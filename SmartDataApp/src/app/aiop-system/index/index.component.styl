.example-header
    height 90px
    padding: 0
    background: unset
    color: unset
    

.app-header-wrapper,.app-left-sidenav
    position: relative
    width: 100%
    height: 100%

.app-header-wrapper .d1,.app-left-sidenav .d1
    position: absolute
    width: 100%
    height: 100%
    background:alpha(#0c1127,0.9)

.app-header-wrapper .d2
   width: 100%
   position: absolute
   height: 100%
   z-index: 2
   background: linear-gradient(to  bottom, alpha(#d8f4ff,0) 85%,alpha(#d8f4ff,0.1)  100%)

.app-header-wrapper .d3
    width: 100%
    position: absolute
    height: 100%
    z-index: 3
    background: linear-gradient(to bottom, alpha(#7f94ff,0) 0%,alpha(#7f94ff,0.1)   100%)

.app-left-sidenav .d2
    width: 100%
    position: absolute
    height: 100%
    z-index: 2
    background: linear-gradient(to right, alpha(#d8f4ff,0) 97%,alpha(#d8f4ff,0.1)  100%)

.app-left-sidenav .d3
    width: 100%
    position: absolute
    height: 100%
    z-index: 3
    background: linear-gradient(to  right,alpha(#7f94ff,0) 0%,alpha(#7f94ff,0.1)   100%)

.sidenav-viewer
    position: sticky
    top: 20px


.example-container
    height calc(100% - 90px)

.example-sidenav
    width 296px;
    overflow-x: hidden; 
    background: unset;
    color: unset;

.example-sidenav.minimize
    width:100px;
   
   

@keyframes maximize-w
{
from {width:100px}
to {width:296px;}
}
@keyframes minimize-w
{
from {width:296px}
to {width:100px;}
}


.mat-drawer-side
   border: 0

 
.mat-drawer-container
    background: #0c1127

.side-nav-menu-on
    bottom: 0px
    height 6%
    position: absolute
    width: 100%
    z-index: 5
    text-align: center
    background: linear-gradient(to right, rgba(127,148,255,0) 0%, rgba(127,148,255,0.1) 100%);

.side-nav-menu-off 
    bottom: 0px
    height 6%
    position: absolute
    left: 10px
    width: calc(100% - 12px)
    z-index: 5
    padding-left: 20px
    background: linear-gradient(to right, rgba(127,148,255,0) 0%, rgba(127,148,255,0.1) 100%)

.side-nav-menu-on a,.side-nav-menu-off a
    cursor pointer
    font-size: 28px

.side-nav-menu-on a:hover,.side-nav-menu-off a:hover
    color #69adff

 .example-sidenav-content .wrap
     padding-top 50px
     padding-right 16px